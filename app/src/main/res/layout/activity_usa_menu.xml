<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsaMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    textview for heading of activity-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donationOptionsText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Your choice of Donation"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#00BCD4"
            />

        <!--    image and textview for food button-->
        <ImageButton
            android:id="@+id/food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/donationOptionsText"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodText"
            android:text="Food"
            android:layout_marginLeft="90dp"
            android:layout_below="@id/food"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#E91E63"
            android:textStyle="bold|italic"
            />

        <!--    image and textview for cloth button-->
        <ImageButton
            android:id="@+id/cloth"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/donationOptionsText"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/food"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/cloth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clothText"
            android:text="Clothes"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/food"
            android:layout_toRightOf="@id/foodText"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#E91E63"
            android:textStyle="bold|italic"
            />

        <!--    image and textview for toy button-->
        <ImageButton
            android:id="@+id/toy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/food"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/toy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toyText"
            android:text="Toys"
            android:layout_marginLeft="90dp"
            android:layout_below="@id/toy"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#E91E63"
            android:textStyle="bold|italic"
            />

        <!--    image and textview for book button-->
        <ImageButton
            android:id="@+id/book"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/cloth"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/toy"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/book" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookText"
            android:text="Books"
            android:layout_marginLeft="110dp"
            android:layout_below="@id/book"
            android:layout_toRightOf="@id/toyText"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#E91E63"
            android:textStyle="bold|italic"
            />

        <!--    image and textview for money button-->
        <ImageButton
            android:id="@+id/money"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/toy"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moneyText"
            android:text="Money"
            android:layout_marginLeft="80dp"
            android:layout_below="@id/money"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:textColor="#E91E63"
            android:textStyle="bold|italic"
            />

    </RelativeLayout>

</ScrollView>